{
  "manifest_version": 3,
  "name": "Pesquisar no DeepSeek",
  "version": "1.2",
  "description": "Realiza pesquisas no DeepSeek diretamente do Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://chat.deepseek.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Abrir a extens√£o"
    }
  }
}
